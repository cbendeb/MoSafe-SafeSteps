<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item
    android:state_pressed="true">
    <shape>
      <gradient
        android:startColor="#ffda85"
        android:endColor="#ea9b42"
        android:angle="270" />
      <stroke
        android:width="1px"
        android:color="#111111" />
      <corners
        android:radius="5dp" />
    </shape>
  </item>
  <item
    android:state_focused="true">
    <shape>
      <gradient
        android:startColor="#ffda85"
        android:endColor="#ea9b42"
        android:angle="90" />
      <stroke
        android:width="3dp"
        android:color="#111111" />
      <corners
        android:radius="5dp" />
      
    </shape>
  </item>
  <item>
    <shape>
      <gradient
        android:startColor="#ffda85"
        android:centerColor="#ea9b42"
        android:endColor="#ffda85"
        android:centerY="50%"
        android:angle="270" />
      <stroke
        android:width="1px"
        android:color="#111111" />
      <corners
        android:radius="5dp" />
      
    </shape>
  </item>
</selector>